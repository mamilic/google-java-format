# Editor configuration, see http://editorconfig.org
root = true

[*]
tab_width = 2
charset = utf-8
indent_size = 2
end_of_line = lf
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.{gradle,sh}]
indent_size = 4

[*.bat]
indent_size = 4
end_of_line = crlf

[*.md]
max_line_length = off
trim_trailing_whitespace = false
